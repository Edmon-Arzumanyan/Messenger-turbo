<div class="container mx-auto mt-2 mb-2">
  <h2 class="text-2xl font-bold mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="mb-2">
      <%= f.label :email, class: "label" %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="mb-2">
      <%= f.label :password, class: "label" %><br/>
      <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-2 flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "text-sm text-gray-700" %>
      </div>
    <% end %>

    <div class="mt-6">
      <%= f.submit "Log in", class: "submit-button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
