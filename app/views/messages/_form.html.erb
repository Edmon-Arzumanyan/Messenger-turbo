<%= turbo_frame_tag "message_form" do %>
  <%= form_with(model: [chat, message], local: true) do |f| %>
    <div class="flex flex-col space-y-4">
      <%= f.text_area :body, id: 'message', class: "shadow appearance-none border rounded-lg w-full p-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline resize-none" %>
      <%= f.file_field :files, multiple: true, id: 'files', class: "shadow appearance-none border rounded-lg w-full p-2 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <%= f.submit 'Send', class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-400 cursor-pointer" %>
    </div>
  <% end %>
<% end %>
