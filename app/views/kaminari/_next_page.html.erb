<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
  <span
    class="
      flex items-center justify-center h-8 px-3 text-gray-700 dark:text-white
      rounded-lg cursor-pointer hover:bg-blue-500 hover:text-gray-700
    "
  >
    <%= link_to_unless current_page.last?,
      'chevron_right',
      url,
      rel: "next",
      remote: remote,
      class: "flex items-center justify-center material-symbols-outlined" %>
  </span>
