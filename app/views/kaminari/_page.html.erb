<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
  <span class="page">
    <%= link_to page,
    url,
    {
      remote: remote,
      rel: page.rel,
      class:
        "text-gray-700 dark:text-white flex items-center justify-center px-3 h-8 hover:bg-blue-500 rounded-lg hover:text-gray-700 cursor-pointer #{"bg-blue-500 text-white" if page.current?}",
    } %>
  </span>
