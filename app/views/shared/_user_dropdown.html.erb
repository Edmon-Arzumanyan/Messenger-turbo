<div class="flex items-center mr-4">
  <button
  id="dropdownAvatarNameButton"
  data-dropdown-toggle="dropdownAvatarName"
  class="relative mr-2 text-sm font-medium rounded-full max-lg:m-end hover:text-primary text-white dark:text-white transition-colors duration-300" type="button">
    <span class="sr-only">Open user menu</span>
    <span class="text-4xl font-light rounded-full material-symbols-outlined">
      account_circle
    </span>
  </button>
</div>

<!-- Dropdown menu -->
<div id="dropdownAvatarName" class="absolute z-50 hidden bg-gray-200 text-gray-900 dark:text-white dark:bg-black divide-y rounded-lg shadow w-52">
  <% if current_user %>
    <div class="px-4 py-3 text-sm">
      <div class="truncate"><%= current_user.email %></div>
    </div>
    <ul class="py-2 text-sm" aria-labelledby="dropdownInformdropdownAvatarNameButtonationButton">
      <li>
        <%= link_to edit_user_registration_path, class: "block px-4 py-2 w-full flex inline-flex hover:bg-gray-100 dark:hover:bg-gray-500" do %>
        <span class="material-symbols-outlined">
          manage_accounts
        </span>
        <span class="pl-5">
          <%= t('settings') %>
        </span>
        <% end %>
      </li>
      <li>
        <%= button_to destroy_user_session_path, method: :delete, class: "block px-4 py-2 flex inline-flex hover:bg-gray-100 dark:hover:bg-gray-500 w-full" do %>
          <span class="material-symbols-outlined">
            logout
          </span>
          <span class="pl-5">
            <%= t('log_out') %>
          </span>
        <% end %>
      </li>
    </ul>
  <% else %>
    <ul class="py-2 text-sm text-center text-gray-700">
      <li>
        <%= link_to  new_user_session_path, class: "block px-4 py-2 w-full flex inline-flex hover:bg-gray-100 dark:hover:bg-gray-500" do %>
        <span class="material-symbols-outlined ">
          login
        </span>
        <span class="pl-5">
          Log In
        </span>
        <% end %>
      </li>
      <li>
        <%= link_to new_user_registration_path, class: "block px-4 py-2 w-full flex inline-flex hover:bg-gray-100 dark:hover:bg-gray-500" do %>
        <span class="pl-2 material-symbols-outlined">
          person_add
        </span>
        <span class="pl-3">
          Sign Up
        </span>
        <% end %>
      </li>
    </ul>
  <% end %>
</div>
